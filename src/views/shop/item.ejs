<%- include('../partials/header')%>
    <main>
        <div class="container">
            <div class="item-container d-flex flex-column a-items-center">
                    <!--ITEM ELEGIDO-->
                    <section class="product-card">
                        <div class="product-card-content d-flex a-items-center j-content-center">
                            <!--Left-->
                            <div class="w-100 d-flex flex-column product-img p-relative">
                                <picture class="w-100 img-box-front">
                                    <img src="/img/<%=item.image_front%>" alt="<%=item.product_description%>" class="w-100">
                                </picture>
                                <picture class="w-100  img-box-back">
                                    <img src="/img/<%=item.image_back%>" alt="<%=item.product_description%>" class="w-100">
                                </picture>
                            </div>               
                            <!--Right-->
                            <article class="w-100 d-flex gap-1 flex-column">
