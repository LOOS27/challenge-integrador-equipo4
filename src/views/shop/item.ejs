                              </ul>
                            </div>
                        </div>
                    </section>
            </div>
        </div>
    </main>

    <%- include('../partials/footer')%>
    <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
        <script>
            new Glide('.glide', {
        type: 'carousel',
        startAt: 0,
        perView: 3,
        gap: 30,
        breakpoints: {
            991: {
            perView: 2
            },
            768: {
            perView: 1
            }
        }
    }
    ).mount();
    </script>
    <script>
        const increase = document.querySelector(".increase");
        var decrease = document.querySelector(".decrease");
        const input = document.querySelector("#input-number-carrito");
        var number = 1;
        
        decrease.addEventListener('click', ()=> {
           if(number > 1) {
            decrease.disabled = false;
            number = number - 1;
            input.value=number;
           } else {
            decrease.disabled = true;
           }
        });
        increase.addEventListener('click', ()=> {
            number = number + 1;
            input.value=number;
            decrease.disabled = false;
        });

    </script>
</body>

</html>