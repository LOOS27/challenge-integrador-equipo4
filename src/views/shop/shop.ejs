<%- include('../partials/header')%>
    <main>
        <div class="products-list">
            <div class="row">
                <div class="container">
                    <div class="shop-container">
                        <!--Box contiene todo los filtros-->
                        <div class="filter d-flex flex-column gap-1">
                            
                            <label for="search-input" class="ff-inter fw-500 fs-1-5 color-black tt-upper">Buscar</label>
                            <input name="search-input" id="search-input" class="ff-inter fw-500 fs-1-25 color-light-gray" placeholder="Item o categoría">
                            <label for="order-select" class="ff-inter fw-500 fs-1-5 color-black tt-upper">Ordenar</label>
                            <select name="order-select" id="order-select" class="select-style ff-inter fw-500 fs-1-25 color-light-gray">
                                <option value="value0" selected>Mayor a menor</option>
                                <option value="value1" disabled>Value 1</option>
                                <option value="value2">Value 2</option>
                                <option value="value3">Value 3</option>
                            </select>
                            <p  class="ff-inter fw-500 fs-1-5 color-black m-t-0 m-b-0 tt-upper">Precio</p>
                            <div class="d-flex gap-1 a-items-center">
                                <div class="d-flex gap-1 a-items-center">
                                    <label for="price-range-min" class="ff-inter fw-500 fs-1 color-black tt-upper">Min</label>
                                    <input name="price-range-min" id="price-range-min" class="ff-inter fw-500 fs-1-25 color-light-gray w-100" placeholder="0">
                                </div>
                                <div class="d-flex gap-1 a-items-center">
                                    <p class="ff-inter fw-500 fs-1 color-black ">-</p>
                                </div>
                                <div class="d-flex gap-1 a-items-center">
                                    <label for="price-range-max" class="ff-inter fw-500 fs-1 color-black tt-upper">Max</label>
                                    <input name="price-range-max" id="price-range-max" class="ff-inter fw-500 fs-1-25 color-light-gray w-100" placeholder="0">
                                </div>
                            </div>
                            <p class="ff-inter fw-500 fs-1-5 color-black m-t-0 m-b-0 tt-upper">Filtrar</p>
                            <div class="d-flex a-items-center">
                                <input type="checkbox" id="new-products" name="new-products" value="Nuevos">
                                <label for="new-products" class="ff-inter fw-500 fs-1-125 color-black p-s-0-5"> Nuevos</label>
                            </div>
                            <div class="d-flex a-items-center">
                                <input type="checkbox" id="sales-products" name="sales-products" value="Ofertas">
                                <label for="sales-products" class="ff-inter fw-500 fs-1-125 color-black p-s-0-5"> Ofertas</label>
                            </div>
                            <div class="d-flex a-items-center">
                                <input type="checkbox" id="special-edition-products" name="special-edition-products" value="Edición especial">
                                <label for="special-edition-products" class="ff-inter fw-500 fs-1-125 color-black p-s-0-5"> Edición especial</label>
                            </div>
                            <div class="d-flex a-items-center">
                                <input type="checkbox" id="favs-products" name="favs-products" value="Favoritos">
                                <label for="favs-products" class="ff-inter fw-500 fs-1-125 color-black p-s-0-5"> Favoritos</label>
                            </div>

                        </div>
                        <!--Box contiene los productos-->
                        <div class="products">
                               <div class="products-container">
                                <%data.forEach( item => { %>
                                    <a href="/shop/item/<%=item.product_id%>" class="product d-flex flex-column">
                                        <div class="product-img p-relative">
                                            <picture class="img-box img-box-front w-100">
                                                <source class="w-100" srcset="/img/<%=item.image_front%>" media="(min-width: 600px)" />
                                                <img class="w-100" src="/img/<%=item.image_front%>" alt="<%=item.product_name%>" />
                                            </picture>
                                            <picture class="img-box img-box-back w-100">
                                                <source class="w-100" srcset="/img/<%=item.image_back%>" media="(min-width: 600px)" />
                                                <img class="w-100" src="/img/<%=item.image_back%>"alt="<%=item.product_name%>" />
                                            </picture>
                                            <div class="tags p-absolute">
                                                <p class="tag-new ff-inter fw-500 fs-0-875 color-white tt-upper p-0-5 m-t-0">Nuevo</p>
                                            </div>
                                        </div>
                                        <div class="content">
                                            <h3 class="ff-inter fw-500 fs-0-875 color-gray-1 tt-upper m-t-0 m-b-0-5"><%=item.licence_name%></h3>
                                            <h2 class="ff-inter fw-700 fs-1-125 color-gray-1 tt-upper m-t-0 m-b-0-5"><%=item.product_name%></h2>
                                            <p class="ff-inter fw-400 fs-1 color-gray-1 tt-upper m-t-0 m-b-0-5">$ <%=item.price%></p>
                                            <p class="ff-inter fw-700 fs-0-75 tt-upper color-link-blue m-t-0 m-b-0"><%=item.dues%> CUOTAS SIN INTERÉS</p>
                                        </div>
                                    </a>
                                    <%
                                })%>
                                
                                
                               </div>
                                 
                        </div>
                        
                    </div>
                </div>
            </div>
           
        </div>
    </main>
    <%- include('../partials/footer')%>
</body>
</html>