<%- include('../partials/header-admin')%>
    <main>
        <div class="row">
            <div class="container">
               <div class="edit-container">
                <div class="title">
                    <h1 class="m-0 ff-raleway fw-700 fs-2-625 color-black-2 tt-upper">Editar item</h1>
                </div>

                <form action="/admin/edit/<%=product.product_id %>?_method=PUT" method="post" enctype="multipart/form-data">
                    <div class="d-flex flex-wrap a-items-center gap-1">
                        <div class="d-flex flex-fill flex-wrap a-items-center gap-1">
                            <div class="p-t-1 p-b-1">
                                <label for="category" class="ff-inter fw-300 fs-1-5 color-black-2">Categoría:</label>
                            </div>
                            <div class="flex-fill p-t-1 p-b-1">
                                <select name="category" id="categoria-select" class="select-style ff-inter fw-500 fs-1-25 color-black-2 w-100">
                                    <% if (product.category_id == 2) { %>
                                        <option value="1" class="color-light-gray">Figuras coleccionables</option>
                                        <option value="2" selected class="color-light-gray">Remeras</option>
                                        <option value="3" class="color-light-gray">LLaveros</option>
                                    <% } %>
                                    <% if (product.category_id == 1) { %>
                                        <option value="1" selected class="color-light-gray">Figuras coleccionables</option>
                                        <option value="2" class="color-light-gray">Remeras</option>
                                        <option value="3" class="color-light-gray">LLaveros</option>
                                    <% } %>
                                    <% if (product.category_id == 3) { %>
                                        <option value="1" class="color-light-gray">Figuras coleccionables</option>
                                        <option value="2" class="color-light-gray">Remeras</option>
                                        <option value="3" selected class="color-light-gray">LLaveros</option>
                                    <% } %>
                                </select>
                            </div>
                        </div>
                        <div class="d-flex flex-fill flex-wrap a-items-center gap-1">
                            <div class="p-t-1 p-b-1">
                                <label for="licence" class="ff-inter fw-300 fs-1-5 color-black-2">Licencia:</label>
                            </div>
                            <div class="flex-fill p-t-1 p-b-1">
                                <select name="licence" id="licencia-select" class="select-style ff-inter fw-500 fs-1-25 color-black-2 w-100">
                                    <% if (product.licence_id == 2) {%>
                                    <option value="2" selected class="color-light-gray">Star Wars</option>
                                    <option value="3" class="color-light-gray">Pokemon</option>
                                    <option value="1" class="color-light-gray">Harry Potter</option>
                                    <%}%>
                                    <% if (product.licence_id == 1) {%>
                                        <option value="2"  class="color-light-gray">Star Wars</option>
                                        <option value="3"  class="color-light-gray">Pokemon</option>
                                        <option value="1" selected class="color-light-gray">Harry Potter</option>
                                    <%}%>
                                    <% if (product.licence_id == 3) {%>
                                        <option value="2"  class="color-light-gray">Star Wars</option>
                                        <option value="3" selected class="color-light-gray">Pokemon</option>
                                        <option value="1" class="color-light-gray">Harry Potter</option>
                                    <%}%>
                                </select>
                            </div>
                        </div>
                    </div>
    
                    <div class="d-flex flex-wrap a-items-center gap-1">
                        <div class="flex-fill d-flex flex-wrap a-items-center gap-1">
                            <div class="p-t-1 p-b-1">
                                <label for="product_name" class="ff-inter fw-400 fs-1-5 color-black-3">Nombre del producto</label>
                            </div>
                            <div class="flex-fill p-t-1 p-b-1">
                                <input name="product_name" id="nombre-producto-input" class="input-text-style ff-inter fw-400 fs-1-125 color-black-2 w-100" value="<%=product.product_name%>">
                                </input>
                            </div>
                        </div>
                    </div>
    
                    <div class="d-flex flex-wrap a-items-center gap-1">
                        <div class="d-flex flex-fill p-t-1 p-b-1">
                            <textarea name="product_description" id="descripcion-producto-textarea" cols="30" rows="10" class="textarea-style ff-inter fw-400 fs-1-125 color-black-2 flex-fill" value=""><%=product.product_description%></textarea>
                            </textarea>
                        </div>
                    </div>
    
                    <div class="d-flex flex-wrap a-items-center gap-1">
                        <div class="flex-fill d-flex flex-wrap a-items-center gap-1">
                            <div class="p-t-1 p-b-1">
                                <label for="sku" class="ff-inter fw-400 fs-1-5 color-black-3">SKU:</label>
                            </div>
                            <div class="flex-fill p-t-1 p-b-1">
                                <input name="sku" id="sku-producto-input" class="input-text-style ff-inter fw-400 fs-1-125 color-black-2 w-100" value="<%=product.sku%>">
                                </input>
                            </div>
                        </div>
    
                        <div class="flex-fill d-flex flex-wrap a-items-center gap-1">
                            <div class="p-t-1 p-b-1">
                                <label for="price" class="ff-inter fw-400 fs-1-5 color-black-2">Precio:</label>
                            </div>
                            <div class="flex-fill p-t-1 p-b-1">
                                <input type="number" name="price" id="precio-producto-input" class="input-text-style ff-inter fw-400 fs-1-125 color-black-2 w-100" value="<%=product.price%>">
                                </input>
                            </div>
                        </div>
    
                        <div class="flex-fill d-flex flex-wrap a-items-center gap-1">
                            <div class="p-t-1 p-b-1">
                                <label for="stock" class="ff-inter fw-400 fs-1-5 color-black-3">Stock:</label>
                            </div>
                            <div class="flex-fill p-t-1 p-b-1">
                                <input type="number" name="stock" id="stock-producto-input" class="input-text-style ff-inter fw-400 fs-1-125 color-black-2 w-100" value="<%=product.stock%>">
                                </input>
                            </div>
                        </div>
                    </div>
    
                    <div class="d-flex flex-wrap a-items-center gap-1">
                        <div class="flex-fill d-flex flex-wrap a-items-center gap-1">
                            <div class="p-t-1 p-b-1">
                                <label for="discount" class="ff-inter fw-400 fs-1-5 color-black-3">Descuento:</label>
                            </div>
                            <div class="flex-fill p-t-1 p-b-1">
                                <input type="number" name="discount" id="descuento-producto-input" class="input-text-style ff-inter fw-400 fs-1-125 color-black-2 w-100" value="<%=product.discount%>">
                                </input>
                            </div>
                        </div>
    
                        <div class="flex-fill d-flex flex-wrap a-items-center gap-1">
                            <div class="p-t-1 p-b-1">
                                <label for="dues" class="ff-inter fw-400 fs-1-5 color-black-3">Cuotas:</label>
                            </div>
                            <div class="flex-fill p-t-1 p-b-1">
                                <select name="dues" id="cuotas-producto-select" class="select-style ff-inter fw-500 fs-1-25 color-black-2 w-100">
                                    <option value="1" selected class="color-light-gray">3 Cuotas sin interés</option>
                                    <option value="2" disabled class="color-light-gray">6 cuotas sin interés</option>
                                </select>
                            </div>
                        </div>
                    </div>
    
                    <div class="d-flex flex-wrap a-items-center gap-1">
                        <div class="d-flex flex-wrap a-items-center gap-1">
                            <div class="p-t-1 p-b-1">
                                <label for="imagenes-producto-select" class="ff-inter fw-400 fs-1-5 color-black-3">Imagenes:</label>
                            </div>
                            <div class="p-t-1 p-b-1">
                                <input type="file" name="images" id="" class="input-file-style ff-inter fw-400 fs-1-125 color-black-2" placeholder="Elegir archivo" multiple>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex flex-wrap a-items-center gap-1">
                        <div class="thumbnail d-flex flex-column a-items-center j-content-center gap-1">
                            <picture class="thumb-img">
                                <source srcset="/img/<%=product.image_front%>" media="(min-width: 600px)" />
                                <img src="/img/<%=product.image_front%>" alt="Kakashi Frente" />
                            </picture>
                            <div class="w-100">
                                <p class="ff-raleway fw-500 fs-1-25 color-black-3 m-0 p-t-1 p-b-1 thumb-text t-center">Frente</p>
                            </div>
                        </div>
    
                        <div class="thumbnail d-flex flex-column a-items-center j-content-center gap-1">
                            <picture class="thumb-img">
                                <source srcset="/img/<%=product.image_back%>" media="(min-width: 600px)" />
                                <img src="/img/<%=product.image_back%>" alt="Kakashi Back" />
                            </picture>
                            <div class="w-100">
                                <p class="ff-raleway fw-500 fs-1-25 color-black-3 m-0 p-t-1 p-b-1 thumb-text t-center">Dorso</p>
                            </div>
                        </div>
                    </div>
    
                    <div class="d-flex flex-wrap a-items-center gap-1">
                        <div class="d-flex flex-wrap a-items-center gap-1">
                            <div class="p-t-1">
                                <button type="submit" class="btn-rectangle-style bg-red color-white ff-inter fw-600 fs-0-875">Modificar producto</button>
                            </div>
                            <div class="p-t-1">
                                <a href="/admin" class="btn-rectangle-style bg-white color-secondary ff-inter fw-600 fs-0-875">Cancelar</a>
                            </div>
                        </div>
                    </div>
                   
                </form>
            </div>
            </div>
        </div>
    </main>
    <%- include('../partials/footer-admin')%>
</body>
</html>